# Ollama Model Containerizer Configuration

# ベースイメージ設定
OLLAMA_BASE_IMAGE=ollama/ollama:latest
OLLAMA_BASE_TAG=ollama-base:latest

# デフォルト設定
DEFAULT_PORT=11434
DEFAULT_HOST=0.0.0.0

# モデル保存パス
MODELS_PATH=./models
CONFIGS_PATH=./configs

# ログレベル
LOG_LEVEL=info

# Docker設定
DOCKER_BUILDKIT=1

# リソース制限
MEMORY_LIMIT=8g
CPU_LIMIT=4