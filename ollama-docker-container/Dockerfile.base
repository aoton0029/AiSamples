FROM ollama/ollama:latest

# 作成者情報
LABEL maintainer="aoton0029"
LABEL description="Base Ollama container for model containerizer"
LABEL version="1.0.0"

# 必要なパッケージのインストール
RUN apt-get update && apt-get install -y \
    curl \
    jq \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Ollamaの設定
ENV OLLAMA_HOST=0.0.0.0
ENV OLLAMA_ORIGINS=*
ENV OLLAMA_MODELS=/root/.ollama/models

# 作業ディレクトリを作成
WORKDIR /app

# 共通設定ファイルをコピー
COPY configs/ollama-base.conf /etc/ollama/ollama.conf

# 起動スクリプトを作成
RUN echo '#!/bin/bash\n\
set -e\n\
echo "Starting Ollama base container..."\n\
echo "Host: $OLLAMA_HOST"\n\
echo "Models directory: $OLLAMA_MODELS"\n\
\n\
# Ollamaサービスを開始\n\
/bin/ollama serve &\n\
\n\
# サービスの起動を待つ\n\
sleep 5\n\
\n\
# ヘルスチェック\n\
until curl -f http://localhost:11434/api/tags >/dev/null 2>&1; do\n\
    echo "Waiting for Ollama to start..."\n\
    sleep 2\n\
done\n\
\n\
echo "Ollama base container is ready!"\n\
\n\
# フォアグラウンドでプロセスを維持\n\
wait' > /app/start.sh && chmod +x /app/start.sh

# ポート開放
EXPOSE 11434

# ヘルスチェック
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:11434/api/tags || exit 1

# 起動コマンド
CMD ["/app/start.sh"]